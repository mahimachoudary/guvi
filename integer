import java.util.*;
import java.lang.*;
import java.io.*;

/* Name of the class has to be "Main" only if the class is public. */
class integer
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner sc=new Scanner(System.in);
		int num;
		 System.out.println("enter a  integer number");
		 num=sc.nextInt();
		 if (num%2==0)
		 {
		 	System.out.println("if you enter an even number");
		 }
		 else
		 {
		 	System.out.println("if you enter an odd number");
		 }
		// your code goes here
	}
}
